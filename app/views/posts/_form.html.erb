
<%= form_for(@post) do |f| %>
  <% devise_error_messages! %>

  <div><%= f.label "Titre : " %><br />
    <%= f.text_field :title%>
  </div>

  <div><%= f.label "Texte : " %><br />
    <%= f.cktext_area :content, :value => @post.content, :id => 'post_content' %>
  </div>

  <div>
    <%= f.label 'Tags (séparés par des ",") : '  %><br />
    <%= f.text_field :tag_list %>
  </div>


  <div class="centered-margin"><%= f.label "Image : " %><br />
    <%= f.file_field :image %>
  </div>
  <br/>

  <div><%= f.submit "Enregistrer" %></div>
<% end %>
